<%- include header.ejs %>

<div id="main-content">
    <% posts.forEach(function(post, index) { %>
    <div class="post">
        <div class="post-bar"></div>
        <div class="post-container">
            <a href="/p/<%= post._id %>" class="post-title"><h2><%= post.title %></h2></a>
            <div class="post-content"><%- post.post %></div>
            <div class="post-footer">
                <% if (post.room === 'Study') { %> 
                <a href="/<%= post.room %>" class="post-room btn btn-primary">学习</a>
                <% } else if (post.room === 'Kitchen'){ %>
                <a href="/<%= post.room %>" class="post-room btn btn-fresh">美食</a>
                <% } else if (post.room === 'Living') { %>
                <a href="/<%= post.room %>" class="post-room btn btn-info">生活</a>
                <% } else if (post.room === 'Yard') { %>
                <a href="/<%= post.room %>" class="post-room btn btn-success">杂谈</a>
                <% } %>
            </div>
        </div>
        <div class="post-time">
            <div class="post-time-day"><%= post.time.day %></div>
            <div class="post-time-month"><%= post.time.month %></div>
            <div class="post-time-year"><%= post.time.year %></div>
        </div>
    </div>
    <% }) %>   
</div>

<%- include footer.ejs %>