<%- include header.ejs %>
          
<div id="mainContent">
     <div class="post">
        <div class="post-bar"></div>
        <div class="post-container">
            <div class="post-title">
                <h2><%= post.title %></h2>
                <% if(user) { %>
                <a class="btn btn-default"><i class="glyphicon glyphicon-star"></i>&nbsp;Star</a>
                <a class="btn btn-default" href="/edit/<%= post._id %>/"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Edit</a>
                <a class="btn btn-default" href="/delete/<%= post._id %>"><i class="glyphicon glyphicon-trash"></i>&nbsp;Delete</a>
                <% } %>
            </div>
            <div class="post-content"><%- post.post %></div>
            <div class="post-footer">
                <a href="/Study" class="post-room btn btn-primary"><%= post.room %></a>
                <span class="post-comment">0 comment</span>
            </div>
        </div>
        <div class="post-time">
            <div class="post-time-day"><%= post.time.day %></div>
            <div class="post-time-month"><%= post.time.month %></div>
            <div class="post-time-year"><%= post.time.year %></div>
        </div>
    </div>   
</div>

<%- include footer.ejs %>